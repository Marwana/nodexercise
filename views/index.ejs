<% include partials/header.ejs %>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp!</h1>
                <p>I don't really know what it is though.. :)</p>
                <br>
                <p><a class="btn btn-primary btn-large" href="/campgrounds/new"> add new campground</a></p>
            </div>
        </header>

        <div class="row" style="text-align: center; display: flex; flex-wrap: wrap;">
            <% camp.forEach(function(camp1) { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= camp1.image %>">
                        <div class="caption">
                            <h4><%= camp1.title %></h4>
                        </div>
                        <a class="btn btn-primary" href="/campgrounds/<%= camp1._id %>">More info</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
<% include partials/footer.ejs %>
